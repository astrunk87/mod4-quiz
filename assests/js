var timeEl = document.querySelector(".time");

var mainEl = document.querySelector("main");

var startGame = document.querySelector("#start");
var question = document.querySelector("h2");
var answer1 = document.querySelector("#answer1");
var answer2 = document.querySelector("#answer2");
var answer3 = document.querySelector("#answer3");
var answer4 = document.querySelector("#answer4");
var score = document.querySelector("#score");
var player = localStorage.getItem("player");


var secondsLeft = 60;


startGame.addEventListener("click", timer);
   

function timer (event) {
    var timerInterval = setInterval(function(){
        // firstQuestion();
        secondsLeft--;
        timeEl.textContent = secondsLeft + " tell game over";

        

        if(secondsLeft === 0) {
            clearInterval(timerInterval);
            
            sendMessage();
        }
    }, 1000);

    function secondQuestion(){
        question.textContent = " what does css stand for?";
        answer1.textContent = " creative sheet standard";
        answer2.textContent = " casscading standard style";
        answer3.textContent = " casscading style sheet";        
        answer4.textContent = " color style sheet";
        answer1.addEventListener("click",function(){
            if(secondsLeft > 0){
            loseTime()
            thirdQuestion()
            }});
        answer2.addEventListener("click",function(){
            if(secondsLeft > 0){
            loseTime()  
            thirdQuestion()          
            }});
        answer3.addEventListener("click",function(){
            if(secondsLeft > 0){
            thirdQuestion()
            score.textContent = "10";
            }});        
        answer4.addEventListener("click",function(){
            if(secondsLeft > 0){
            loseTime()
            thirdQuestion()
            }});   
         
    }

    function thirdQuestion() {
        question.textContent = "what does js stand for?";
        answer1.textContent = " Java Script";
        answer2.textContent = " joint style";
        answer3.textContent = " james script";
        answer4.textContent = " jelly scone";
        answer2.addEventListener("click",function(){
            if(secondsLeft > 0){
            loseTime()
            endGame()
            }}); 
        answer3.addEventListener("click",function(){
            if(secondsLeft > 0){
            loseTime()
            endGame()
            }});
        answer4.addEventListener("click",function(){
            if(secondsLeft > 0){
            
            endGame()
            }});
        answer1.addEventListener("click",function(){
            if(secondsLeft > 0){
            endGame()
            score.textContent = "15"
            }});   

    }

    function endGame(){
        if (secondsLeft > 0)
        clearInterval(timerInterval);
        // secondsLeft = 0;
        sendMessage();
        


    }

    function loseTime(){
        secondsLeft--;
        secondsLeft--;
        secondsLeft--;
        secondsLeft--;
        }
    // function firstQuestion(){
    question.textContent = "which answer is a web api?";
    answer1.textContent = "java script";
    answer2.textContent = "css";
    answer3.textContent = "bootstrap";
    answer4.textContent = "html";
    // this does work
    answer4.addEventListener("click",function(){
        if(secondsLeft > 0){
        secondQuestion()
        loseTime()
        
        }});
    answer1.addEventListener("click",function(){
        if(secondsLeft > 0){
        secondQuestion()
        loseTime()
        
        }});
    answer2.addEventListener("click",function(){
        if(secondsLeft > 0){
        secondQuestion()
        loseTime()
        
        }});

    answer3.addEventListener("click",function() {
        if(secondsLeft > 0) {
        score.textContent = "5";
        secondQuestion()
        
        }})};    
        
           
    

// }

function sendMessage() {
    timeEl.textContent = "GAME OVER"
}


